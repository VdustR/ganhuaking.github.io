{
  "private": true,
  "scripts": {
    "dev": "env-cmd .env vuepress dev src",
    "build": "env-cmd .env vuepress build src",
    "commit": "git-cz",
    "gh-pages": "yarn build && gh-pages -d dist -b master"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "env-cmd": "^8.0.2",
    "eslint": "^5.14.1",
    "eslint-plugin-vue": "^5.2.2",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.4",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "vuepress": "^1.0.0-alpha.39"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,html,htm,vue,css,less,scss,sass,md,mdx,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
